        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "allowJs": true
    },
    "include": [
        "src/**/*"
